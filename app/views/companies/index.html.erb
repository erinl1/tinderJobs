<div class="row starter top-xs border" style="background:#6BABF3; color: white">
<div class="col-sm-6 col-xs-12">
  <div class="box">
    <%= link_to "NOVICESHIP", root_path, style: "color: white; font-family: 'Lato'; font-size: 30px",class: "btn btn-link btn-lg"   %>
  </div>
</div>
<div class="col-sm-6 col-xs-12">
  <div class="box end-xs">
    <%= link_to "New Company", new_company_path, style: "", class: "btn btn-lg btn-warning active"   %>
  <!-- profile css goes here -->
  </div></div>
</div>
<p id="notice"><%= notice %></p>

<div class = 'container'>
<center><h1 style = 'color: black'>Companies</h1></center>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.location %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>

</div>
