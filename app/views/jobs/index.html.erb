<div class="row starter top-xs border" style="background:#6BABF3; color: white">
  <div class="col-sm-6 col-xs-12">
    <div class="box">
      <%= link_to "tinderJobs", root_path, style: "color: white; font-family: 'Lato'; font-size: 30px",class: "btn btn-link btn-lg"   %>
  </div>
  </div>
  <div class="col-sm-6 col-xs-12">
    <div class="box end-xs">
      <%= link_to "New Job", new_company_job_path, style: "", class: "btn btn-lg btn-warning active"   %>
<!-- profile css goes here -->
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class = 'container'>
  <center><h1 style = 'color: black'>Jobs</h1></center>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', company_jobs_url %></td>
        <td><%= link_to 'Edit', [:edit, @company, job] %></td>
        <td><%= link_to 'Destroy', [@company, job], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
