<!DOCTYPE html>
<html>
  <head>
    <title>TinderJobs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <head>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css" type="text/css" >
      <link rel="stylesheet" href="flexboxgrid/css/flexboxgrid.min.css" type="text/css">
      <link rel="stylesheet.css" type="text/css">
      <link rel="stylesheet" type="text/css"
      href="https://fonts.googleapis.com/css?family=Lato:400,700">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
      <style>
      .row {
        padding-bottom: 20px;

      }
      .box {
        align-items: center;
        align-self: center;
        padding: 10px;
        line-height: 24px;
        padding-left: 100px;
        padding-right: 100px;
      }
      body {
        font-family: "Lato";
        font-weight: 400;

      }
      .three {
        justify-content: center;

      }
      .picSize {
        width: 100%;
        height: auto;
      }
      .hello {
        text-align: center;
      }
      h1 {
        font-size: 100px;
        color: white;
        align-items: center;
      }
      textarea {
        width: 350px;
        height: 100px;

      }
      img {
        width: 100%;
      }
      button {
        width: 120px;
        height: 50px;
        color: white;
        align-items: center;
        font-size: 17px;
        font-family: 'Lato';
      }
      .btn {
        background-color: #6BABF3;
      }
      .blue {
        background-color: #6BABF3;
        padding-top: 40px;
        height: 50%;
        margin: 0;
      }
      .yellow {
        background-color: #9EF688;
        padding-top: 40px;
        height: 70%;
      }
      .red {
        background-color: #BC545D;
        padding-top: 40px;
        height: 70%;
      }

      </style>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
