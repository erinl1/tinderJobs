<!DOCTYPE html>
<html>
  <head>
    <title>tinderJobs</title>

      <%= csp_meta_tag %>

      <%= csrf_meta_tags %>

      <%= stylesheet_link_tag 'usernew', media: 'all' %>
      <%= javascript_include_tag :modernizr %>
      <%= stylesheet_link_tag :application %>
      <%= javascript_tag :application %>

      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css" type="text/css" >
      <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato:400,700">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body>
    <div class="row starter top-xs border" style="background:#6BABF3; color: white">
    <div class="col-sm-6 col-xs-12">
      <div class="box">
        <%= link_to "tinderJobs", root_path, style: "color: white; font-family: 'Lato'; font-size: 30px",class: "btn btn-link btn-lg"   %>
      </div>
    </div>
    <div class="col-sm-6 col-xs-12">
      <div class="box end-xs">
        <%= link_to '<a class="btn btn-lg btn-warning active" role="button">Profile</a>', "../" %> <!-- profile css goes here -->
      </div>
    </div>
  </div>

    <%= yield %>
  </body>
</html>
