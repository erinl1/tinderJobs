<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Phonenum:</strong>
  <%= @user.phonenum %>
</p>
<p>
  <strong>JobTypes</strong>
  <%= @user.jobtype %>
</p>
<p>
  <strong>Resume:</strong>
  <%= @user.resume %>
</p>

<p>
  <strong>Possible Companies:</strong> <br>
    <% jobs = Job.where(id: @user.jobs_id) %>
    <% jobs.each do |job| %>
      For: <%= job.name %>: <%= job.description %> <br>
      <% companies = Company.where(jobs_id: job.id) %>
      <% companies.each do |company| %>
        <%= company.name %> <br>
        <%= company.location %> <br>
      <% end %>
      <br>
    <% end %>
</p>
