    </div>
  </div>
</div>
<div class = 'box'>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Phonenum:</strong>
  <%= @user.phonenum %>
</p>
<p>
  <strong>JobTypes</strong>
  <%= @user.jobtype %>
</p>
<p>
  <strong>Resume:</strong>
  <%= @user.resume %>
</p>

